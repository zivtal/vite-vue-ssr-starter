{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "importHelpers": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "typeRoots": ["./client/node_modules/@types", "./client/shims"],
  "paths": {
    "@/*": ["./client/*"],
    "@assets/*": ["./client/assets/*"],
    "@json/*": ["./client/json/*"],
    "@router/*": ["./client/router/*"],
    "@services/*": ["./client/services/*"],
    "@shared/*": ["./client/shared/*"],
    "@store/*": ["./client/store/*"],
    "@styles/*": ["./client/assets/styles/*"],
    "@views/*": ["./client/views/*"],
    "@components/*": ["./client/shared/components/*"],
    "@directives/*": ["./client/shared/directives/*"],
    "@helpers/*": ["./client/shared/helpers/*"],
    "@locale/*": ["./client/locale/*"]
  },
  "include": ["./client/**/*.ts", "./client/**/*.d.ts", "./client/**/*.vue"]
}
